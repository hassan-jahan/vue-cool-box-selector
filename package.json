{
  "name": "vue-cool-box-selector",
  "version": "0.1.0",
  "private": false,
  "description": "Fancy, versatile box, button, image selector for Vue 2 and 3",
  "author": "Hassan Jahan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hassan-jahan/vue-cool-box-selector"
  },
  "bugs": "https://github.com/hassan-jahan/vue-cool-box-selector/issues",
  "keywords": [
    "cool-box-selector",
    "button-select",
    "box-select",
    "box-option",
    "choose-box",
    "ui",
    "frontend",
    "vue"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.umd.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "pnpm lint:fix",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "dev": "vite --mode dev",
    "build": "pnpm clean:dist && vite build --mode prod && vue-tsc --emitDeclarationOnly",
    "build-no-tsc": "pnpm clean:dist && vite build --mode prod",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm clean:coverage && vitest --coverage --mode test"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.7.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "vue-demi": "latest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.31.0",
    "@types/node": "^18.11.9",
    "@vitejs/plugin-vue2": "^2.2.0",
    "@vitest/coverage-c8": "^0.25.2",
    "eslint": "8.22.0",
    "eslint-plugin-vue": "^9.11.0",
    "happy-dom": "^7.7.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vitest": "^0.25.2",
    "vue": "2.7.14",
    "vue-tsc": "0.40.8"
  },
  "volta": {
    "node": "14.19.1"
  }
}
